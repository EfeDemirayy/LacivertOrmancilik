AddDefaultCharset UTF-8
<IfModule mod_mime.c>
  AddCharset UTF-8 .html .css .js .json .txt .xml
  AddType image/avif .avif
  AddType image/webp .webp
  AddType image/svg+xml .svg .svgz
  AddType font/woff2 .woff2
  AddType font/woff .woff
</IfModule>

<IfModule mod_rewrite.c>
  RewriteEngine On

  # Force HTTPS
  RewriteCond %{HTTPS} !=on
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

  # Home URL: do not show /index or /index.html
  RewriteRule ^$ /anasayfa [R=301,L]
  RewriteRule ^index(?:\.html)?/?$ /anasayfa [R=301,L,NC]

  # Redirect legacy top-level filenames to clean slugs
  RewriteRule ^hakkimizda\.html$ /hakkimizda [R=301,L,NC]
  RewriteRule ^sss\.html$ /sss [R=301,L,NC]
  RewriteRule ^kanunveyonetmelikler\.html$ /kanun-ve-yonetmelikler [R=301,L,NC]
  RewriteRule ^ormanizinleri\.html$ /orman-izinleri [R=301,L,NC]
  RewriteRule ^madde16\.html$ /madde-16 [R=301,L,NC]
  RewriteRule ^madde17\.html$ /madde-17 [R=301,L,NC]
  RewriteRule ^diger\.html$ /diger [R=301,L,NC]
  RewriteRule ^galeri\.html$ /galeri [R=301,L,NC]
  RewriteRule ^iletisim\.html$ /iletisim [R=301,L,NC]
  RewriteRule ^gizlilik-politikasi\.html$ /gizlilik-politikasi [R=301,L,NC]
  RewriteRule ^muhendislik\.html$ /muhendislik [R=301,L,NC]
  RewriteRule ^izinirtifak\.html$ /izin-irtifak [R=301,L,NC]
  RewriteRule ^surdurulebilirlik\.html$ /surdurulebilirlik [R=301,L,NC]

  # Redirect project detail URLs to extensionless form
  RewriteRule ^projeler/(.+)\.html$ /projeler/$1 [R=301,L,NC]

  # Serve clean top-level slugs
  RewriteRule ^anasayfa/?$ /index.html [L]
  RewriteRule ^hakkimizda/?$ /hakkimizda.html [L]
  RewriteRule ^sss/?$ /sss.html [L]
  RewriteRule ^kanun-ve-yonetmelikler/?$ /kanunveyonetmelikler.html [L]
  RewriteRule ^orman-izinleri/?$ /ormanizinleri.html [L]
  RewriteRule ^madde-16/?$ /madde16.html [L]
  RewriteRule ^madde-17/?$ /madde17.html [L]
  RewriteRule ^diger/?$ /diger.html [L]
  RewriteRule ^galeri/?$ /galeri.html [L]
  RewriteRule ^iletisim/?$ /iletisim.html [L]
  RewriteRule ^gizlilik-politikasi/?$ /gizlilik-politikasi.html [L]
  RewriteRule ^muhendislik/?$ /muhendislik.html [L]
  RewriteRule ^izin-irtifak/?$ /izinirtifak.html [L]
  RewriteRule ^surdurulebilirlik/?$ /surdurulebilirlik.html [L]

  # Serve extensionless project detail URLs
  RewriteRule ^projeler/([a-z0-9-]+)/?$ /projeler/$1.html [L,NC]
</IfModule>

# Browser caching
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/avif "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  ExpiresByType text/html "access plus 0 seconds"
  ExpiresDefault "access plus 1 month"
</IfModule>

<IfModule mod_headers.c>
  <FilesMatch "\.(?:avif|gif|ico|jpe?g|png|svg|webp|woff2?)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  <FilesMatch "\.(?:css|js)$">
    Header set Cache-Control "public, max-age=2592000"
  </FilesMatch>
  <FilesMatch "\.(?:html|htm)$">
    Header set Cache-Control "public, max-age=0, must-revalidate"
  </FilesMatch>
</IfModule>

# Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css text/javascript application/javascript application/json application/xml image/svg+xml
</IfModule>

<IfModule mod_brotli.c>
  AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/css text/javascript application/javascript application/json application/xml image/svg+xml
</IfModule>
